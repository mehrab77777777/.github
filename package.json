{
  "name": "iran-empire-2027",
  "version": "1.0.0",
  "description": "بازی استراتژیک مدیریت امپراطوری ایران در سال ۲۰۲۷",
  "main": "index.html",
  "keywords": [
    "game",
    "strategy",
    "persian",
    "iran",
    "empire",
    "mobile",
    "pwa"
  ],
  "author": "Iran Empire Game Team",
  "license": "MIT",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/iran-empire-2027.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/iran-empire-2027/issues"
  },
  "scripts": {
    "start": "python3 -m http.server 8000",
    "serve": "python3 -m http.server 8000",
    "build": "npm run build:icons && npm run build:pwa",
    "build:icons": "node scripts/generate-icons.js",
    "build:pwa": "node scripts/build-pwa.js",
    "build:android": "cordova build android",
    "build:android-release": "cordova build android --release",
    "test": "npm run test:lighthouse && npm run test:pwa",
    "test:lighthouse": "lighthouse http://localhost:8000 --output json --output-path lighthouse-report.json",
    "test:pwa": "pwa-test-tools http://localhost:8000",
    "deploy": "npm run build && npm run deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d .",
    "lint": "eslint script.js",
    "format": "prettier --write *.js *.css *.html",
    "validate": "html-validate index.html"
  },
  "devDependencies": {
    "cordova": "^12.0.0",
    "eslint": "^8.0.0",
    "gh-pages": "^6.0.0",
    "html-validate": "^8.0.0",
    "lighthouse": "^11.0.0",
    "prettier": "^3.0.0",
    "pwa-test-tools": "^1.0.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 1%",
    "iOS >= 12",
    "Android >= 8"
  ],
  "pwa": {
    "name": "امپراطوری ایران ۲۰۲۷",
    "short_name": "امپراطوری ایران",
    "theme_color": "#667eea",
    "background_color": "#2c3e50",
    "display": "standalone",
    "orientation": "portrait-primary"
  },
  "cordova": {
    "platforms": [
      "android",
      "ios"
    ],
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-statusbar": {},
      "cordova-plugin-device": {},
      "cordova-plugin-splashscreen": {},
      "cordova-plugin-screen-orientation": {},
      "cordova-plugin-vibration": {},
      "cordova-plugin-local-notification": {}
    }
  },
  "android": {
    "versionCode": 1,
    "minSdkVersion": 21,
    "targetSdkVersion": 34,
    "compileSdkVersion": 34
  }
}